pipeline{
    agent {label 'Dev'}
    stages{
        stage("code"){
            steps{
                git url:"https://github.com/sunnyshinde123/MINI_ASSIGNMENT.git", branch: "main"
            }
        }
        stage("build"){
            steps{
                sh "docker build -t nodeapp ."
            }
        }
        stage("test"){
            steps{
                echo "This is test waali phase"
            }
        }
        stage("deploy"){
            steps{
                sh "docker compose up -d --build"
            }
        }
    }
}
